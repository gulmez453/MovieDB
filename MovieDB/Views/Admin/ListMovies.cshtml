@model List<MovieDB.Entities.Movie>
@{
    ViewData["Title"] = "List Movies";
}
<div class="jumbotron text-center">
    <h1 class="display-5">@ViewData["Title"]</h1>
    <p class="lead">You can list your movies here.</p>
    <hr class="my-4">
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Artists</th>
                <th>Director</th>
                <th>Type</th>
                <th>Running Time</th>
                <th>Rate</th>
                <th>Produce Year</th>
                <th>Description</th>
                <th></th>
   
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr class="align-middle">
                    <td>
                        @if (movie.Image != null)
                        {
                            <img style="height: 100px; width: 125px" src="@Url.Action("GetImage", new { movieId = movie.Id })" alt="Movie Image" />
                        }
                        else
                        {
                            <span>No Image Available</span>
                        }
                    </td>
                    <td>@movie.Title</td>
                    <td>@movie.Artists</td>
                    <td>@movie.Director</td>
                    <td>@movie.Type</td>
                    <td>@(movie.Hour + "h " + movie.Minute + "m")</td>
                    <td>@movie.Rate</td>
                    <td>@movie.ProduceYear</td>
                    <td>@movie.Description</td>
                    <td>
                        <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="UpdateMovie" asp-route-movieId="@movie.Id">Update</a>
                        <a class="btn btn-danger" asp-area="" asp-controller="Admin" asp-action="RemoveMovie" asp-route-movieId="@movie.Id">Remove</a>
                </tr>
            }
        </tbody>
    </table>

</div>